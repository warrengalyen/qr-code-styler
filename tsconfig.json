{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "node_modules/qrcode-generator/qrcode.d.ts"
  ]
}